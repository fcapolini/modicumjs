{
  "name": "modicumjs",
  "version": "0.5.0",
  "description": "A minimal yet powerful reactive web framework",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha -r ts-node/register 'test/**/*.ts'",
    "build": "tsc",
    "install-lib": "npm install -g .",
    "uninstall-lib": "npm uninstall -g modicumjs",
    "list-installed": "npm ls -g --depth=0",
    "test-win": "set TS_NODE_COMPILER_OPTIONS={\"module\": \"commonjs\" } && mocha -r ts-node/register 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcapolini/modicumjs.git"
  },
  "keywords": [
    "frontend",
    "ui",
    "declarative",
    "framework",
    "javascript",
    "library",
    "minimalist",
    "reactive",
    "typescript"
  ],
  "author": "Fabrizio Capolini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fcapolini/modicumjs/issues"
  },
  "homepage": "https://github.com/fcapolini/modicumjs#readme",
  "dependencies": {
    "requirejs": "^2.3.6"
  },
  "devDependencies": {
    "@swc/core": "^1.2.148",
    "@types/chai": "^4.3.0",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "jsdom": "^19.0.0",
    "mocha": "^9.2.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  }
}
